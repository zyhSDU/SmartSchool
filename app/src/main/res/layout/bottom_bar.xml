<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dip"
    android:gravity="center"
    android:background="@drawable/bottom_bar_bg"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        
        <Button 
            android:id="@+id/tab_1"
            android:background="@drawable/button_selector_menu_search"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        
        <Button 
            android:id="@+id/tab_2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:background="@drawable/button_selector_menu_cut"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/tab_3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:background="@drawable/button_selector_menu_paste"/>
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1">
        
        <Button 
            android:id="@+id/tab_4"
            android:scaleType="fitCenter"
            android:background="@drawable/button_selector_menu_selectall"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1">
        
        <Button 
            android:id="@+id/tab_5"
            android:scaleType="fitCenter"
            android:background="@drawable/button_selector_menu_more"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</LinearLayout>
