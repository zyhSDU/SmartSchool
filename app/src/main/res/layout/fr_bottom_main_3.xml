<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">

    <RelativeLayout
        android:background="@color/white"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/rl_icon_bottom_fg3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_centerInParent="true"
                android:src="@drawable/haha" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content_bottom_fg3"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/rl_icon_bottom_fg3"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height2_input"
                android:orientation="horizontal">

                <TextView
                    style="@style/a_text_black_18sp_center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="身份：" />

                <TextView
                    android:id="@+id/tv_identify_bottom_fg_setting"
                    style="@style/a_text_black_18sp_left_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height2_input"
                android:orientation="horizontal">

                <TextView
                    style="@style/a_text_black_18sp_center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="学校：" />

                <TextView
                    android:id="@+id/tv_school_bottom_fg_setting"
                    style="@style/a_text_black_18sp_left_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height2_input"
                android:orientation="horizontal">

                <TextView
                    style="@style/a_text_black_18sp_center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/suername" />

                <TextView
                    android:id="@+id/tv_username_bottom_fg_setting"
                    style="@style/a_text_black_18sp_left_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>