<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_describe_item_repair_info"
            style="@style/a_text_black_18sp_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status_item_repair_info"
            style="@style/a_text_black_18sp_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/a_text_black_18sp_right_center"
            android:id="@+id/tv_reportTime_item_repair_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_deal_repair_item_repair_info"
                android:textColor="@color/white"
                android:background="@color/base"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="管理员处理报修"
                android:visibility="gone" />

            <Button
                android:textColor="@color/white"
                android:background="@color/base"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/btn_finish_repair_item_repair_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="结束此次报修" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>