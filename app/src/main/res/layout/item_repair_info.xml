<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_describe_item_repair_info"
        style="@style/a_text_black_18sp_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_status_item_repair_info"
        style="@style/a_text_black_18sp_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_reportTime_item_repair_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_deal_repair_item_repair_info"
        style="@style/a_text_black_18sp_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理员受理报修" />

    <Button
        android:id="@+id/btn_finish_repair_item_repair_info"
        style="@style/a_text_black_18sp_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束此次报修" />
</LinearLayout>