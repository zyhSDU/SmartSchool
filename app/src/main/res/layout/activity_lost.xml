<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.example.administrator.smartschool.ui.ac.abac.tab.LostActivity">

    <EditText
        android:id="@+id/et_zdescribe_ac_lost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="请输入您的认领描述（不得超过80个字）"
        android:maxLines="8"
        android:minLines="8"
        android:padding="16dp" />

    <EditText
        android:id="@+id/et_phone_ac_lost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:hint="请输入您的联系方式（不超过11位）"
        android:inputType="number"
        android:maxLines="1"
        android:padding="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_ac_lost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_ac_lost"
            style="@style/a_text_18sp_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="点击添加图片" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_ac_lost"
        style="@style/a_text_white_16sp_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交" />
</LinearLayout>
