<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.smartschool">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.administrator.smartschool.ui.ac.ac.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name="com.example.administrator.smartschool.ui.ac.abac.SplashAbAc" />
        <activity android:name="com.example.administrator.smartschool.ui.ac.abac.LoginAbAc" />
        <activity android:name="com.example.administrator.smartschool.ui.ac.abac.RegisterAbAc" />
        <activity android:name="com.example.administrator.smartschool.ui.ac.abac.StartAbAc" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ac.abac.tab.WeatherAbAc" />
        <activity android:name=".ui.ac.abac.tab.BusAbAc" />
        <activity android:name=".ui.ac.abac.tab.ReportAbAc" >

        </activity>
        <activity android:name=".ui.ac.abac.tab.AnswerReportAbAc" />
        <activity android:name=".ui.ac.abac.tab.ScoreAbAc" />
        <activity android:name=".ui.ac.abac.tab.TestScheduleAbAc" />
    </application>

</manifest>