        </activity>
        <activity android:name=".ui.ac.abac.tab.TogetherParterListActivity" />
        <activity android:name=".ui.ac.abac.tab.StartSignActivity" />
        <activity android:name=".ui.ac.abac.tab.SignActivity" />
        <activity
            android:name="com.google.zxing.activity.CaptureActivity"
            android:theme="@style/SmartSchool.Main">

        </activity>
        <activity
            android:name=".ui.ac.Main2Activity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/SmartSchool.Main"></activity>
        <activity android:name=".ui.ac.abac.tab.AddReportActivity"></activity>
    </application>

</manifest>